/**
 * Core Philosophy: This ruleset enforces a strict user-ownership model, with a
 * special exception for an 'admin' role. It is designed for security and scalability,
 * ensuring users can only manage their own data, while administrators can read
 * all user and business data for oversight.
 *
 * Data Structure:
 * - /users/{userId}: Core, common user data (e.g., email, userType). The document ID is the auth UID.
 * - /businesses/{userId}: Stores business-specific data for business users.
 * - /products/{productId}: Stores product listings, which are public.
 *
 * Key Security Decisions:
 * - Path-based Ownership: All user-specific data is stored in documents where
 *   the ID matches the user's Authentication UID.
 * - Admin Read Access: Users with `userType == 'admin'` can read all documents
 *   in the `/users` and `/businesses` collections, but cannot write to them. This
 *   provides system oversight without allowing impersonation or data tampering.
 * - User Listing Restricted: Regular users cannot list the contents of the
 *   '/users' or '/businesses' collections to protect privacy.
 * - Self-Creation Only: Users can only create a profile document for
 *   themselves, where the document ID matches their own UID.
 * - Public Product Visibility: The '/products' collection is publicly readable.
 * - Write Access to Products Restricted: All write operations on products
 *   are disabled as a secure default.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    /**
     * Checks if the user is authenticated.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * Checks if the currently authenticated user's UID matches the provided userId.
     * This is the primary function for verifying document ownership.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    /**
     * Checks if the requesting user has an 'admin' role in their own user document.
     * This is a cross-document read, which is efficient for rules.
     */
    function isAdmin() {
      return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType == 'admin';
    }


    // ----------------------------------------------------------------------
    // Collection: users
    // ----------------------------------------------------------------------

    /**
     * @description Controls access to individual user profiles.
     * The document ID must be the user's UID.
     * @path /users/{userId}
     */
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin(); // Only admins can list users.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isOwner(userId);
    }

    // ----------------------------------------------------------------------
    // Collection: businesses
    // ----------------------------------------------------------------------

    /**
     * @description Controls access to business-specific profiles.
     * The document ID must be the user's UID.
     * @path /businesses/{businessId}
     */
    match /businesses/{businessId} {
      function isBusinessOwner() {
        return isOwner(businessId) && exists(/databases/$(database)/documents/users/$(businessId));
      }

      allow get: if isBusinessOwner() || isAdmin();
      allow list: if isAdmin(); // Only admins can list businesses.
      allow create: if isBusinessOwner() && request.resource.data.id == businessId;
      allow update: if isBusinessOwner() && request.resource.data.id == resource.data.id;
      allow delete: if isBusinessOwner();
    }

    // ----------------------------------------------------------------------
    // Collection: products
    // ----------------------------------------------------------------------

    /**
     * @description Controls access to product listings.
     * @path /products/{productId}
     */
    match /products/{productId} {
      allow get, list: if true; // Publicly readable
      allow create, update, delete: if false;
    }
  }
}
